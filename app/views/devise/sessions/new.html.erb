<div class="heading text-center">
  <span>Log in</span>
</div>

<div class="log_in_form">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
                        class: "form-control" , id: "email", :placeholder => "email"%>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "current-password", id: "password",
      :placeholder => "password", class: "form-control"%>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :ログイン状態を保存する %>
      </div>
    <% end %>

    <div class="option">
      <p><%= link_to "パスワードをお忘れの方はこちら",  new_user_password_path,
                     style: "color: #ADA5A5;" %></p>
      <p><%= link_to "まだ登録がお済みでない方はこちら", new_user_registration_path,
      style: "color: #ADA5A5;"%></p>
    </div>

    <div class="text-right"><%= image_tag "google_login_logo.png"%></div>

    <div class="text-right pt-5">
      <%= f.submit "Log in", class: "submit-button" %>
    </div>
  <% end %>

</div>



