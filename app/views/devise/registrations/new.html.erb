<div class="heading text-center">
  <span><%= link_to "Sign up", new_user_registration_path, style: "color: #ADA5A5;"%></span>
</div>

<form class="signup-form">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.text_field :name, autofocus: true, :placeholder => "user name", class: "form-control"%>
    </div>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "email", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :パスワード%>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :パスワードをもう一度入力してください %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>


    <div class="text-right">
      <%= f.submit "Sign up", class: "submit-button" %>
      <p class="mt-4"><%= link_to "既にアカウントをお持ちですか？", new_user_session_path%></p>
    </div>
  <% end %>

</form>






